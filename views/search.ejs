<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Search Results</title>
    <style>
        body {
            background-color: #0ee7dc;
            font-family: Arial, sans-serif;
        }

        .c {
            margin: 0 auto;
            max-width: 60%;
            padding: 40px;
            text-align: center;
            box-shadow: 0px 0px 10px rgba(11, 96, 181, 0.1);
            background-color: #08d26a;
            margin-top: 50vh;
            transform: translateY(-50%);
        }

        h1 {
            font-size: 36px;
            color: #1009d3;
            margin-bottom: 40px;
        }

        .r {
            margin-bottom: 40px;
        }

        .r table {
            width: 100%;
            border-collapse: collapse;
        }

        .r table thead th {
            background-color: #37099a;
            color: #fff;
            padding: 10px;
            font-weight: bold;
            
        }

        .r table tbody td {
            padding: 10px;
            border-bottom: 1px solid #ccc;
            font-size: 45 px;
            
        }

        .r table tbody td a {
            color: #940620;
            text-decoration: none;
            word-wrap: break-word;
            max-width: 300px;
            display: inline-block;
            vertical-align: top;
            
        }

        .end {
            margin-bottom: 20px;
        }

        .end a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #01110d;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
        }

        .end a:hover {
            background-color: #d21430;
        }

        .p1 {
            color: #333;
            font-size: 18px;
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <div class="c">
        <h1>Search Results</h1>
        <% if (results.length > 0) { %>
            <div class="r">
                <table>
                    <thead>
                        <tr>
                            <th>Full URL</th>
                            <th>Note</th>
                            <th>Short URL</th>
                            <th>Clicks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach(count => { %>
                            <tr>
                                <td><a href="<%= count.fullurl %>"><%= count.fullurl %></a></td>
                                <td><%= count.note %></td>
                                <td><a href="/redirect/<%= count.shorturl %>"><%= count.shortlink %></a></td>
                                <td><%= count.clicks %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="p1">No results found.</p>
        <% } %>
        <div class="end">
            <a href="/">Back to Home</a>
        </div>
    </div>
</body>
</html>
